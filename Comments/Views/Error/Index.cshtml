@model Comments.ViewModels.Error
@{var error = Model.ErrorException;}

@{
	Layout = "~/Views/_Layout.cshtml";
}
@*
	Note: this view is only ever shown when there's been an error rendering any front-end at all.

		most errors encountered by the front end will show an error in the react app, and won't hit this page.
*@
<main role="main">
	<div class="container">
		<div class="panel page-header">
			<h1 class="heading mt--c">Something's gone wrong</h1>
			<p class="lead">We'll look into it right away. Please try again in a few minutes. And if it's still not fixed, <a href="/get-involved/contact-us">contact us</a>.</p>
			<p><a href="/guidance/inconsultation">Back to consultations</a></p>
			<div class="hide">
				@if (error != null)
				{
					<!--
					@error.Message
					@error.StackTrace
					-->
				}
			</div>
		</div>
	</div>
</main>

